= simple_form_for time_sheet, remote: true do |f|
  = f.input :first_name, label: 'Prénom'
  = f.input :last_name, label: 'Nom'
  = f.input :month, label: 'Mois', collection: @months, prompt: 'Choisir un mois', label_method: :last, value_method: :first
  = f.input :year, label: 'Année', input_html: { value: Time.zone.now.year }
  = f.button :button, 'Générer le fichier excel', class: 'btn btn-primary', data: { disable_with: '<i class="fas fa-circle-notch fa-spin fa-lg"></i> Génération en cours...' }